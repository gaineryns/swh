<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <div class="container">
        <div class="form">
        <h1>Cr√©er un compte</h1>
              <%= form_for @user do |u| %>  
                <div class="field"> 
                  <%= u.label :first_name %>
                  <%= u.text_field :first_name %><br>
                  <%= u.label :last_name %>
                  <%= u.text_field :last_name %><br>
                  <%= u.label :username %>
                  <%= u.text_field :username %><br>
                  <%= u.label :email %>
                  <%= u.email_field :email %><br>
                  <%= u.label :password %>
                  <%= u.password_field :password %><br>
                  <%= u.label :password_confirmation %>
                  <%= u.password_field :password_confirmation %><br>
                </div> 
                <div class="actions"> 
                  <%= u.submit "Create" %> 
                </div> 
              <% end %>
        </div>
      </div>
</div>

